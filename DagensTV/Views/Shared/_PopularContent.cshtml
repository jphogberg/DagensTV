@model IEnumerable<DagensTV.Models.ViewModels.PopVM>

<div id="popular-wrapper">
    @if (Model != null)
    {
        <section id="popular-list">
            <h1>
                DET <span id="pop">HETASTE</span> JUST NU
            </h1>
            @foreach (var item in Model)
            {
                <figure class="pop-img">
                    <a onclick="ShowInfo(@item.ScheduleId)">
                        <img src="@item.ImgUrl" title="@item.Name" alt="@item.Name">

                        @foreach (var show in item.Schedules)
                        {
                            <figcaption>
                                @show.ShowName<br /><i class="@item.Icon"></i> @show.ChannelName
                            </figcaption>
                        }
                    </a>
                </figure>
            }
        </section>
    }
</div>
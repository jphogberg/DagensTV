@model IEnumerable<DagensTV.Models.Channel>

@{
    ViewBag.Title = "Min Sida";
}

<div class="col-md-2 col-md-10">
    <h1>Mina kanaler</h1>
</div><br/>
@using (Html.BeginForm("SetMyPage", "User", FormMethod.Post))
{
<input type="submit" value="Spara kanalval" class="btn btn-default" />
<hr/><br/>



    if (Model != null)
    {
        foreach (var channel in Model)
        {
            <section class="my-channelList">
            <ul id="my-channelList">
                <li>
                    <form>
                        @Html.CheckBoxFor(x => channel.MyPage)
                        <img src="../@channel.LogoFilePath" class="channel" title="@channel.Name" alt="@channel.Name"><span id="channel-name"> @channel.Name</span>
                    </form>
                </li>
            </ul>
            </section>
        }
    }
}   
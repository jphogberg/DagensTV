@model IEnumerable<DagensTV.Models.ViewModels.PopVM>
@{
    ViewBag.Title = "Index";
}

<div class="col-md-2 col-md-10">
    <h1>Hantera nyhetspuffar</h1>
</div><br />
<hr /><br />

@using (Html.BeginForm("GetForm", "Admin", FormMethod.Post))
{
    <div class="col-md-offset-2 col-md-10">
        <div class="dropdown">
            <button class="btn btn-default dropdown-toggle" type="button" id="menu-pop" data-toggle="dropdown">
                Nyhetspuffar
                <span class="caret"></span>
            </button>

            <ul class="dropdown-menu" role="menu" aria-labelledby="menu-pop">
                @foreach (var item in Model)
                {
                    <li role="presentation"><a role="menuitem" tabindex="-1" href="#">@item.ImgTitle</a></li>
                }
            </ul>
        </div><br /><br />

        <div class="form-group">
            @*@Html.HiddenFor()
                @Html.TextBoxFor(m => m.)*@
            <label for="img-title">Bildens titel:</label>
            <input type="text" class="form-control" id="img-title">
        </div>

        <div class="form-group">
            <label for="img-url">Bildens url:</label>
            <input type="text" class="form-control" id="img-url">
        </div>

        <div class="form-group">
            <label for="img-icon">Bildens ikon:</label>
            <input type="text" class="form-control" id="img-icon">
        </div><br /><br />

        <div class="dropdown">
            <button class="btn btn-default dropdown-toggle" type="button" id="menu-pop" data-toggle="dropdown">
                Kanaler
                <span class="caret"></span>
            </button>
            @if (ViewBag.ScheduleList != null)
            {
                <ul class="dropdown-menu" role="menu" aria-labelledby="menu-pop">
                    @foreach (var channel in ViewBag.PopChannelList)
                    {
                        <li role="presentation"><a role="menuitem" tabindex="-1" href="#">@channel.Name</a></li>
                    }
                    }

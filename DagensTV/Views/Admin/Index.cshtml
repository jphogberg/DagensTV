@model DagensTV.Models.ViewModels.PopVM
@{
    ViewBag.Title = "Index";
    ViewBag.Current = "Admin";
}

<div class="col-md-2 col-md-10">
    <h1>Hantera nyhetspuffar</h1>
</div><br />
<hr /><br />

@using (Html.BeginForm("GetForm", "Admin", FormMethod.Post))
{
    <div class="col-md-offset-2 col-md-10">
       
        @Html.Label("Steg 1: Välj nyhetspuff för att redigera/byta ut")<br /><br />
        <div class="dropdown">
            <button class="btn btn-default dropdown-toggle" type="button" id="menu-pop" data-toggle="dropdown">
                Nyhetspuffar
                <span class="caret"></span>
            </button>

            <ul class="dropdown-menu" role="menu" aria-labelledby="menu-pop">
                @foreach (var item in Model.Popular)
                {
                    <li role="presentation"><a role="menuitem" tabindex="-1" href="#">@item.Id</a></li>
                }
            </ul>
        </div><br /><br /><br />

        @Html.Label("Steg 2: Fyll i fälten")<br /><br />
        <div class="form-group">
            @Html.Label("Bildens URL")<br />
            @Html.TextBoxFor(x => Model.ImgUrl)
            @Html.HiddenFor(x => Model.ImgUrl)
            @*<label for="img-title">Bildens titel:</label>
            <input type="text" class="form-control" id="img-title" value="">
            @Html.TextBox("Title")
            @Html.Hidden("ImgTitle")*@
        </div>

        <div class="form-group">
            @Html.Label("Nyhetspuffens namn")<br />
            @Html.TextBoxFor(x => Model.Name)
            @Html.HiddenFor(x => Model.Name)
            @*<label for="img-url">Bildens url:</label>
            <input type="text" class="form-control" id="img-url" value="skavlan">*@
        </div>

        <div class="form-group">
            @Html.Label("Ikon  (ex: mdi mdi-movie)")<br/>
            @Html.TextBoxFor(x => Model.Icon)
            @Html.HiddenFor(x => Model.Icon)
            @*<label for="img-icon">Bildens ikon:</label>
            <input type="text" class="form-control" id="img-icon">*@
        </div><br /><br />

        @Html.Label("Steg 3: Välj kanal")<br /><br />
        <div class="dropdown">
            <button class="btn btn-default dropdown-toggle" type="button" id="menu-pop" data-toggle="dropdown">
                Kanaler
                <span class="caret"></span>
            </button>

            <ul class="dropdown-menu" role="menu" aria-labelledby="menu-pop">
                @foreach (var pop in Model.Schedules)
                {
                    //foreach (var schedule in pop.Schedules)
                    //{
                    <li role="presentation"><a role="menuitem" tabindex="-1" href="#">@pop.ChannelName</a></li>
                        @*}*@
                }
            </ul>
        </div>
        <br /><br />

        <input type="submit" value="Lägg till" class="btn btn-success" />
       
    </div>

}




























